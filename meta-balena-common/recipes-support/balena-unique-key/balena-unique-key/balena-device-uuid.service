[Unit]
Description=Balena device UUID
Requires=home-root-.rnd.mount
After=home-root-.rnd.mount os-config-devicekey.service
RequiresMountsFor=/mnt/boot

[Service]
Type=oneshot
RemainAfterExit=yes
Environment="HOME=/home/root"
ExecStart=@BASE_BINDIR@/bash @BINDIR@/balena-unique-key uuid

[Install]
WantedBy=basic.target
