# vi: ft=sh

# shellcheck disable=SC1091
[ -f "/usr/libexec/os-helpers-logging" ] && . /usr/libexec/os-helpers-logging

parse_efivar_val() {
	od --address-radix=n --format=u1 "$1" \
		| tr -s "' '" \
		| cut -d ' ' -f6
}

# return zero if secure boot is enabled
secureboot_enabled() {
	test "$(parse_efivar_val /sys/firmware/efi/efivars/SecureBoot-*)" -eq 1
	return
}

# return zero if system is in setup mode
setup_mode_enabled() {
	test "$(parse_efivar_val /sys/firmware/efi/efivars/SetupMode-*)" -eq 1
	return
}

# return zero if system is in user mode
user_mode_enabled() {
	setup_mode_enabled && return 1
}
