[Unit]
Description=ResinOS persistent NetworkManager state location
DefaultDependencies=no
Requires=mnt-state.mount resin-state-reset.service var-volatile-lib.service
After=mnt-state.mount resin-state-reset.service var-volatile-lib.service
Before=umount.target
Conflicts=umount.target

[Mount]
What=/mnt/state/root-overlay/var/lib/NetworkManager
Where=/var/lib/NetworkManager
Type=None
Options=bind

[Install]
WantedBy=resin-bind.target
